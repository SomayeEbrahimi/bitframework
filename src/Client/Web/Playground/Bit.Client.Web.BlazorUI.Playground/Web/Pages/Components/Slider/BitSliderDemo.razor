    <CodeSample Title="Range Slider" Description="" CodeSampleContentForCopy="@rangeSliderSampleCode">
        <SampleContent>
            <div class="slider-container">
                <BitSlider Label="Range slider"
                           Min="0"
                           Max="10"
                           DefaultUpperValue="8"
                           DefaultLowerValue="2"
                           IsRanged="true" />
                <BitSlider Label="Disabled"
                           Min="50"
                           Max="500"
                           Step="50"
                           DefaultUpperValue="300"
                           IsRanged="true"
                           IsEnabled="false" />
                <BitSlider Label="Controlled example"
                           Max="10"
                           @bind-LowerValue="sliderRangedLowerValue"
                           @bind-UpperValue="sliderRangedUpperValue"
                           IsRanged="true" />
                <BitButton Class="bit-btn-slider" OnClick="ChangeBitSliderRangedValues">
                    Change Value
                </BitButton>
                <BitSlider Label="Formatted value"
                           Max="100"
                           IsRanged="true"
                           ValueFormat="P00" />
                <BitSlider Label="Origin from zero"
                           Min="-5"
                           Max="5"
                           Step="1"
                           DefaultUpperValue="2"
                           IsRanged="true"
                           IsOriginFromZero="true" />
            </div>
        </SampleContent>
        <CodeSampleContent>
            <pre>
                &lt<span class="soco-component-attr">BitSlider</span> <span class="soco-component-attr">Label</span>="<span>Range Slider"</span>
                                    <span class="soco-component-attr">Min</span>="<span>0"</span>
                                    <span class="soco-component-attr">Max</span>="<span>10"</span>
                                    <span class="soco-component-attr">DefaultUpperValue</span>="<span>8"</span>
                                    <span class="soco-component-attr">DefaultLowerValue</span>="<span>2"</span>
                                    <span class="soco-component-attr">IsRanged</span>="<span class="soco-tag-type-def">true"</span>/&gt;
                &lt<span class="soco-component-attr">BitSlider</span> <span class="soco-component-attr">Label</span>="<span>Disabled"</span>
                                    <span class="soco-component-attr">Min</span>="<span>50"</span>
                                    <span class="soco-component-attr">Max</span>="<span>500"</span>
                                    <span class="soco-component-attr">DefaultUpperValue</span>="<span>50"</span>
                                    <span class="soco-component-attr">DefaultValue</span>="<span>300"</span>
                                    <span class="soco-component-attr">IsRanged</span>="<span class="soco-tag-type-def">true"</span>
                                    <span class="soco-component-attr">IsEnabled</span>="<span class="soco-tag-type-def">false"</span>/&gt;
                &lt<span class="soco-component-attr">BitSlider</span> <span class="soco-component-attr">Label</span>="<span>Controlled"</span>
                                    <span class="soco-component-attr">Max</span>="<span>10"</span>
                                    <span class="soco-component-attr"><span class="soco-code">@@</span>bind-LowerValue</span>="<span>sliderRangedLowerValue"</span>
                                    <span class="soco-component-attr"><span class="soco-code">@@</span>bind-UpperValue</span>="<span>sliderRangedUpperValue"</span>
                                    <span class="soco-component-attr">IsRanged</span>="<span class="soco-tag-type-def">true"</span>/&gt;
                &lt<span class="soco-component-attr">BitButton</span> <span class="soco-component-attr">OnClick</span>="ChangeBitSliderRangedValues"> Change Value &lt/<span class="soco-component-attr">BitButton</span>&gt;
                &lt<span class="soco-component-attr">BitSlider</span> <span class="soco-component-attr">Label</span>="<span>Formatted Value"</span>
                                    <span class="soco-component-attr">Max</span>="<span>100"</span>
                                    <span class="soco-component-attr">IsRanged</span>="<span class="soco-tag-type-def">true"</span>
                                    <span class="soco-component-attr">ValueFormat</span><span>="P00"</span>/&gt;
                &lt<span class="soco-component-attr">BitSlider</span><span class="soco-component-attr">Label</span>="<span>Origin From Zero"</span>
                                    <span class="soco-component-attr">Min</span>="<span>-5"</span>
                                    <span class="soco-component-attr">Max</span>="<span>5"</span>
                                    <span class="soco-component-attr">Step</span>="<span>1"</span>
                                    <span class="soco-component-attr">DefaultUpperValue</span>="<span>2"</span>
                                    <span class="soco-component-attr">IsRanged</span>="<span class="soco-tag-type-def">true"</span>
                                    <span class="soco-component-attr">IsOriginFromZero</span>="<span class="soco-tag-type-def">true"</span>/&gt;
                <span class="soco-code">@@ code {</span>
                      <span class="soco-tag-type-def">private double? </span>sliderRangedLowerValue = 0;
                      <span class="soco-tag-type-def">private double? </span>sliderRangedUpperValue = 0;

                      <span class="soco-tag-type-def">private void </span>ChangeBitSliderRangedValues()
                      {
                          sliderRangedLowerValue = 3;
                          sliderRangedUpperValue = 7;
                      }
                <span class="soco-code">}</span>
            </pre>
        </CodeSampleContent>
    </CodeSample>
