@page "/components/iconbutton"

@using Bit.Client.Web.BlazorUI.Playground.Web.Components

<ComponentPage ComponentName="Icon Button" OverviewDesc="Buttons give people a way to trigger an action. They’re typically found in forms, dialog panels, and dialogs.
    Some buttons are specialized for particular tasks, such as navigation, repeated actions, or presenting menus."
               ComponentParameters="componentParameters">
    <CodeSample Title="BitButton" Description="To create a icon button you can use a BitIconButton component.">
        <SampleContent>
            <div>
               <BitIconButton IconName="Emoji" />
               <BitIconButton IconName="EmojiDisappointed" AllowDisabledFocus="false" IsEnabled="false" />
               <BitIconButton IconName="Emoji2" Title="I'm Happy" />
            </div>
        </SampleContent>
        <CodeSampleContent>
             <pre>
                 &lt<span class="soco-component-attr">BitIconButton IconName</span>="Emoji2"><span>&lt/</span><span class="soco-component-attr">BitIconButton</span>&gt;
                 &lt<span class="soco-component-attr">BitIconButton IconName</span>="Emoji2" <span class="soco-component-attr">AllowDisabledFocus</span>=<span class="soco-var-attr">"false"</span><span class="soco-component-attr"> IsEnabled</span>=<span class="soco-var-attr">"false"></span><span>&lt/</span><span class="soco-component-attr">BitIconButton</span>&gt;
                 &lt<span class="soco-component-attr">BitIconButton IconName</span>="Emoji2"<span class="soco-component-attr"> ToolTip</span>="I'm Happy"><span>&lt/</span><span class="soco-component-attr">BitIconButton</span>&gt;
             </pre>
        </CodeSampleContent>
    </CodeSample>
    <CodeSample Title="Style & Class" Description="BitIconButton can directly get css class or inline style.">
      <SampleContent>
           <div>
              <BitIconButton IconName="Home" Style="color:red">
                  Styled Button
              </BitIconButton>
              <BitIconButton IconName="FileImage" Class="custom-button">
                  Classed Button
              </BitIconButton>
           </div>
      </SampleContent>
      <CodeSampleContent>
           <pre>
               &lt<span class="soco-component-attr">BitIconButton Style=</span><span>"color:red" </span><span class="soco-component-attr"> IconName=</span>"Home"> Styled Button<span>&lt/</span><span class="soco-component-attr">BitIconButton</span>&gt;
               &lt<span class="soco-component-attr">BitIconButton Class=</span><span>"custom-button"</span><span class="soco-component-attr"> IconName=</span>"FileImage"> Classed Button<span>&lt/</span><span class="soco-component-attr">BitIconButton</span>&gt;
               &lt<span class="soco-var-attr">style></span>
                        <span class="soco-css-style">.custom-button</span> {
                              <span class="soco-var-attr">height</span> : 40px;
                              <span class="soco-var-attr">width</span> : 166px;
                              <span class="soco-var-attr">font-family</span> : Axiforma;
                              <span class="soco-var-attr">font-size</span> : 16px;
                              <span class="soco-var-attr">background-color</span> : #2F455A;
                              <span class="soco-var-attr">border-color</span> : #2F455A;
                        }
               &lt/<span class="soco-tag-type-def">style</span>&gt;
           </pre>
     </CodeSampleContent>
    </CodeSample>
    <CodeSample Title="Visibility" Description="By setting Visibility attribute, BitIconButton can be Visible, Hidden or Collapsed.">
        <SampleContent>
            <div class="sample-btn">
               <BitIconButton IconName="List" Visibility="BitComponentVisibility.Visible">Visible Button</BitIconButton>
               <div><span>Hidden Button: </span>[<BitIconButton Visibility="BitComponentVisibility.Hidden">Hidden Button</BitIconButton>]</div>
               <div><span>Collapsed Button: </span>[<BitIconButton Visibility="BitComponentVisibility.Collapsed">Collapsed Button</BitIconButton>]</div>
            </div>
        </SampleContent>
        <CodeSampleContent>
             <pre>
                 &lt<span class="soco-component-attr">BitIconButton Visibility</span>="ComponentVisibility.Visible"<span class="soco-component-attr"> IconName</span>="List">Visible Button<span>&lt/</span><span class="soco-component-attr">BitIconButton</span>&gt;
                 &lt<span class="soco-component-attr">BitIconButton Visibility</span>="ComponentHidden.Hidden"<span class="soco-component-attr"> IconName</span>="List">Hidden Button&lt/<span class="soco-component-attr">BitIconButton</span>&gt;
                 &lt<span class="soco-component-attr">BitIconButton Visibility</span>="ComponentVisibility.Collapsed"<span class="soco-component-attr"> IconName</span>="List">Collapsed Button<span>&lt/</span><span class="soco-component-attr">BitIconButton</span>&gt;
             </pre>
        </CodeSampleContent>
    </CodeSample>
     <CodeSample Title="Arias for Screen Reader" Description="Aria attribues can also set for a BitIconButton.">
        <SampleContent>
             <div>
                 <BitIconButton IconName="PowerButton" AriaDescription="Detailed description used for screen reader.">
                     Button with Aria Description
                 </BitIconButton>
                 <BitIconButton IconName="PowerButton" AriaHidden="true">
                     Button with Aria Hidden
                 </BitIconButton>
             </div>
        </SampleContent>
        <CodeSampleContent>
           <pre>
               &lt<span class="soco-component-attr">BitIconButton AriaDescription</span>="Detailed description used for screen reader." <span class="soco-component-attr"> IconName</span>="PowerButton">Icon Button with Aria Description<span>&lt/</span><span class="soco-component-attr">BitIconButton</span>&gt;
               &lt<span class="soco-component-attr">BitIconButton AriaHidden</span>=<span class="soco-var-attr">"true" </span><span class="soco-component-attr"> IconName</span>="PowerButton">Icon Button with Aria Hidden<span>&lt/</span><span class="soco-component-attr">BitIconButton</span>&gt;
           </pre>
        </CodeSampleContent>
    </CodeSample>
     <CodeSample Title="Button-like Anchor" Description="BitButton can act as a link by setting Href and Target attributes.">
        <SampleContent>
              <div class="m-t-10">
                  <BitIconButton IconName="Website" Target="_blank" Href="https://github.com/bitfoundation/bitframework">
                      Open Bit Foundation In New Tab
                  </BitIconButton>
                  <BitIconButton IconName="Website" Href="https://github.com/bitfoundation/bitframework" ButtonStyle="ButtonStyle.Standard">
                      Go To Bit Foundation
                  </BitIconButton>
                  <BitIconButton IconName="Website" Target="_self" Href="https://github.com/bitfoundation/bitframework" IsEnabled="false">
                      <span>Bit Foundation From Span</span>
                  </BitIconButton>
              </div>
        </SampleContent>
        <CodeSampleContent>
           <pre>
               &lt<span class="soco-component-attr">BitIconButton</span><span class="soco-component-attr"> IconName</span>="Website"<span class="soco-component-attr"> Target</span><span>="_blank"</span><span class="soco-component-attr"> Href</span>=<span class="soco-var-attr">"https://github.com/bitfoundation/bitframework"></span>Open Bit Foundation In New Tab<span>&lt/</span><span class="soco-component-attr">BitIconButton</span>&gt;
               &lt<span class="soco-component-attr">BitIconButton</span><span class="soco-component-attr"> IconName</span>="Website"<span class="soco-component-attr"> ButtonStyle</span>="ButtonStyle.Standard"<span class="soco-component-attr"> Href</span>=<span class="soco-var-attr">"https://github.com/bitfoundation/bitframework"></span>Go To Bit Foundation<span>&lt/</span><span class="soco-component-attr">BitIconButton</span>&gt;
               &lt<span class="soco-component-attr">BitIconButton Target</span>=<span>"_self"</span><span class="soco-component-attr"> IconName=</span>"Website"<span class="soco-component-attr"> Href</span>=<span class="soco-var-attr">"https://github.com/bitfoundation/bitframework"</span><span class="soco-component-attr"> IsEnabled</span>=<span class="soco-var-attr">"false"</span>&lt<span class="soco-var-attr">span</span>>Bit Foundation From Span&lt<span class="soco-var-attr">/span</span>>&lt/<span class="soco-component-attr">BitIconButton</span>&gt;
           </pre>
        </CodeSampleContent>
    </CodeSample>
</ComponentPage>