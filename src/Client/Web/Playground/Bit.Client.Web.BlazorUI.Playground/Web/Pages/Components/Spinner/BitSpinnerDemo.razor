@page "/components/spinner"

@using Bit.Client.Web.BlazorUI.Playground.Web.Components

<ComponentPage ComponentName="Spinner" OverviewDesc="BitSpinner is an outline of a circle which animates around itself indicating to the user that things are processing. A Spinner is shown when it's unsure how long a task will take making it the indeterminate version of a ProgressIndicator. They can be various sizes, located inline with content or centered. They generally appear after an action is being processed or committed. They are subtle and generally do not take up much space, but are transitions from the completed task."
               ComponentParameters="componentParameters" EnumParameters="enumParameters">
    <CodeSample Title="BitSpinner" Description="To create a spinner, you can use a BitSpinner component." CodeSampleContentForCopy="@spinnerSampleCode">
        <SampleContent>
            <div class="spinner-container">
                <div class="m-b-15">
                    <label>Extra small spinner</label>
                    <BitSpinner Size="BitSpinnerSize.XSmall" />
                </div>
                <div class="m-b-15">
                    <label>Small spinner</label>
                    <BitSpinner Size="BitSpinnerSize.Small" />
                </div>
                <div class="m-b-15">
                    <label>Medium spinner</label>
                    <BitSpinner Size="BitSpinnerSize.Medium" />
                </div>
                <div>
                    <label>Large spinner</label>
                    <BitSpinner Size="BitSpinnerSize.Large" />
                </div>
            </div>
        </SampleContent>
        <CodeSampleContent>
            <pre>
                &lt<span class="soco-component-attr">BitSpinner Size=</span>"SpinnerSize.XSmall">&lt/<span class="soco-component-attr">BitSpinner</span>&gt;
                &lt<span class="soco-component-attr">BitSpinner Size=</span>"SpinnerSize.Small">&lt/<span class="soco-component-attr">BitSpinner</span>&gt;
                &lt<span class="soco-component-attr">BitSpinner Size=</span>"SpinnerSize.Medium">&lt/<span class="soco-component-attr">BitSpinner</span>&gt;
                &lt<span class="soco-component-attr">BitSpinner Size=</span>"SpinnerSize.Large">&lt/<span class="soco-component-attr">BitSpinner</span>&gt;
            </pre>
        </CodeSampleContent>
    </CodeSample>
    <CodeSample Title="Label positioning" Description="By setting LabelPosition attribute, change position of spinner to bottom, top, left or right." CodeSampleContentForCopy="@labelPositioningSampleCode">
        <SampleContent>
            <div class="spinner-positioning">
                <div>
                    <label>Spinner with label positioned below</label>
                    <BitSpinner LabelPosition="BitSpinnerLabelPosition.Top" Label="I am definitely loading..." />
                </div>
                <div>
                    <label>Spinner with label positioned above</label>
                    <BitSpinner LabelPosition="BitSpinnerLabelPosition.Bottom" Label="Seriously, still loading..." />
                </div>
                <div>
                    <label>Spinner with label positioned to right</label>
                    <BitSpinner LabelPosition="BitSpinnerLabelPosition.Left" Label="Wait, wait..." />
                </div>
                <div>
                    <label>Spinner with label positioned to left</label>
                    <BitSpinner LabelPosition="BitSpinnerLabelPosition.Right" Label="Nope, still loading..." />
                </div>
            </div>
        </SampleContent>
        <CodeSampleContent>
            <pre>
                &lt<span class="soco-component-attr">BitSpinner LabelPosition=</span>"SpinnerLabelPosition.Bottom"
                                       <span class="soco-component-attr"> Label</span>="I am definitely loading...">
                &lt/<span class="soco-component-attr">BitSpinner</span>&gt;
                &lt<span class="soco-component-attr">BitSpinner LabelPosition=</span>"SpinnerLabelPosition.Top"
                                       <span class="soco-component-attr"> Label</span>="Seriously, still loading...">
                &lt/<span class="soco-component-attr">BitSpinner</span>&gt;
                &lt<span class="soco-component-attr">BitSpinner LabelPosition=</span>"SpinnerLabelPosition.Right"
                                       <span class="soco-component-attr"> Label</span>="Wait, wait...">
                &lt/<span class="soco-component-attr">BitSpinner</span>&gt;
                &lt<span class="soco-component-attr">BitSpinner LabelPosition=</span>"SpinnerLabelPosition.Left"
                                       <span class="soco-component-attr"> Label</span>="Nope, still loading...">
                &lt/<span class="soco-component-attr">BitSpinner</span>&gt;
            </pre>
        </CodeSampleContent>
    </CodeSample>
</ComponentPage>
