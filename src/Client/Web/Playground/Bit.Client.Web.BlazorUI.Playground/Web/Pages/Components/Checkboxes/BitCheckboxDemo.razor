                &lt<span class="soco-component-attr">BitCheckbox OnClick</span>="<span>() => IsCheckBoxIndeterminateInCode = <span class="soco-tag-type-def">true</span>"></span><span>Make Checkbox Indeterminate</span><span>&lt/</span><span class="soco-component-attr">BitCheckbox</span><span>&gt;</span>
                
                <span class="soco-code">&#64;code {</span>
